<% include ../partials/header %>


<h1 style="text-align: center">Edit: <%= campground.name %></h1>

<div class="row">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div style="width: 30%; margin: 25px auto;"> <!--Top-bottom Left-right-->
            <div class="form-group">
                <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="campground[description]" value="<%= campground.description %>">
            </div>
            <div class="form-group">
                <input type="number" class="form-control" name="campground[price]" value="<%=campground.price%>" min="0.01" step="0.01">
            </div>                   
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Edit</button>
            </div>
            <a href="/campgrounds/<%= campground._id %>">Go Back!</a>
        </div>
    </form>    
</div>

<% include ../partials/footer %>