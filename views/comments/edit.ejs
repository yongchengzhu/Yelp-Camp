<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center">Edit Comment</h1>
    
    <div class="row">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div style="width: 30%; margin: 25px auto;"> <!--Top-bottom Left-right-->
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
                <a href="/campgrounds">Go Back!</a>
            </div>
        </form>    
    </div>
</div>

<% include ../partials/footer %>